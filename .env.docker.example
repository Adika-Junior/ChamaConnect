# Docker Environment Variables
# Copy this file to .env.docker and update with your actual values
# DO NOT commit .env.docker to git

# Database Configuration
DB_ROOT_PASSWORD=your_secure_root_password_here
DB_DATABASE=team_task_management
DB_USERNAME=ttms_user
DB_PASSWORD=your_secure_db_password_here
DB_PORT=3307
DB_HOST=db
DB_CONNECTION=mysql

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=null

# Application Configuration
APP_NAME=ChamaConnect
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

# Janus Gateway (Video Conferencing)
JANUS_URL=http://janus:8088/janus
JANUS_ADMIN_URL=http://janus:8188/admin
JANUS_SECRET=your_janus_secret_here
JANUS_ADMIN_SECRET=your_janus_admin_secret_here

# M-Pesa Configuration
MPESA_CONSUMER_KEY=your_mpesa_consumer_key
MPESA_CONSUMER_SECRET=your_mpesa_consumer_secret
MPESA_SHORTCODE=your_mpesa_shortcode
MPESA_PASSKEY=your_mpesa_passkey
MPESA_ENVIRONMENT=sandbox
MPESA_WEBHOOK_IPS=

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=noreply@example.com
MAIL_FROM_NAME="${APP_NAME}"

# SMS Configuration (Africa's Talking)
SMS_PROVIDER=africas_talking
SMS_API_KEY=your_sms_api_key
SMS_USERNAME=your_sms_username
SMS_SHORTCODE=your_sms_shortcode

# Transcription Service
TRANSCRIPTION_ENABLED=false
TRANSCRIPTION_PROVIDER=whisper
TRANSCRIPTION_API_KEY=
TRANSCRIPTION_WHISPER_URL=https://api.openai.com/v1/audio/transcriptions
TRANSCRIPTION_DEFAULT_LANGUAGE=en

# Cache & Session
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# Broadcasting (Reverb)
BROADCAST_DRIVER=reverb
REVERB_APP_ID=your_reverb_app_id
REVERB_APP_KEY=your_reverb_app_key
REVERB_APP_SECRET=your_reverb_app_secret
REVERB_HOST=reverb
REVERB_PORT=8080
REVERB_SCHEME=http

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=debug
